    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
		<java.version>1.8</java.version>
		<nexus.repo>https://devops-tools.pearson.com</nexus.repo>
    </properties>

    <developers>
        <developer>
            <name>Alexander Wei√ü</name>
            <url>https://www.github.com/alexanderwe</url>
        </developer>
    </developers>


    <scm>
        <connection>scm:git:ssh://git@bitbucket.pearson.com/dslal/bananaj.git</connection>
        <url>https://github.com/alexanderwe/bananaj</url>
    </scm>

